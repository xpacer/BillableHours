@model BillableHours.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="col-lg-6 col-lg-offset-3">
    <h1 class="text-center">Foo and Bar Law Firm </h1>

    <br />
    <div class="panel panel-primary">

        <div class="panel-heading">
            <h5>Upload CSV containing staff working hours to generate invoice</h5>
        </div>
        <div class="panel-body">

            @{
                if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @ViewBag.Error
                    </div>
                }
            }

            <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Invoices">
                <div class="form-group">
                    <label asp-for="File"></label>
                    <input type="file" name="File" class="form-control-file">
                </div>
                <p class="text-warning">*Column indices should start from zero (0)</p>
                <div class="form-group">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th class="col-md-4">
                                    Csv columns
                                </th>
                                <th>
                                    Position (Index)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="col-md-4">
                                    @Html.DisplayNameFor(m => m.EmployeeId)
                                    <span class="red-text">*</span>
                                </td>
                                <td>
                                    <input class="form-control" type="number" asp-for="EmployeeId">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(m => m.HourlyBillableRate)
                                    <span class="red-text">*</span>
                                </td>
                                <td>
                                    <input class="form-control" type="number" asp-for="HourlyBillableRate">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(m => m.Project)
                                    <span class="red-text">*</span>
                                </td>
                                <td>
                                    <input class="form-control" type="number" asp-for="Project">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(m => m.Date)
                                    <span class="red-text">*</span>
                                </td>
                                <td>
                                    <input class="form-control" type="number" asp-for="Date">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(m => m.StartTime)
                                    <span class="red-text">*</span>
                                </td>
                                <td>
                                    <input class="form-control" type="number" asp-for="StartTime">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(m => m.EndTime)
                                    <span class="red-text">*</span>
                                </td>
                                <td>
                                    <input class="form-control" type="number" asp-for="EndTime">
                                </td>
                        </tbody>
                    </table>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="FirstRowHeader">
                    <label asp-for="FirstRowHeader"></label>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="GeneratePDF">
                    <label asp-for="GeneratePDF"></label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Generate Invoice" class="btn btn-primary btn-lg">
                </div>
            </form>
        </div>

    </div>

</div>